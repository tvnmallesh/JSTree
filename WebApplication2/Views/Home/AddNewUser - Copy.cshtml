@model mbtTool.Models.LoginInfo
@{
    ViewBag.Title = "Add New User(Admin Console)";
    Layout = "";
}
<head>
    <title>NExtgen Testing Tool</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/jquery.mCustomScrollbar.min.css">
    <link rel="stylesheet" href="~/Content/style.css">

    <script src="~/Scripts/jquery-1.11.0.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/jquery-ui.min.js"></script>

    <script src="~/Scripts/tcasetable.custom.js"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
</head>
<style>
    .frmAddNew {
        background-image: url("../Content/Images/5002.png");
        background-repeat: repeat;
        height:85%;
        width:101%;
    }
</style>
<div>
    @using (Html.BeginForm("SaveUser", "Home", FormMethod.Post))
    {
        @Html.AntiForgeryToken(); // this is for prevent CSRF attack
        @Html.ValidationSummary(true)
        <nav class="navbar navbar-inverse">
            <ul class="navinlineblock">
                <li class="navbar-left"><a href="#"><img src="~/Content/Images/nxtgen_logo@3x.png" alt="ITC-Image" /></a></li>
                <li class="text-center centertext">TEST CASE GENERATION TOOL</li>
                @*<h2>Welcome: @ViewBag.ClaimsIdentity.Name</h2>*@
                <li class="navbar-right">
                    <a href="#"><img src="~/Content/Images/ITCinfotech_logo@3x.png" style="height:46px;" alt="ITC-Image" /></a>@*<li class="navbar-right"><div style="font-size:14px; width:40px;">Welcome <br />@ViewBag.Fname</div></li>*@
                <li class="navbar-right">
                    <div class="drpdown" style="font-size:14px; width:40px;">
                        <div onclick="myFunction()" class="drpbtn">Welcome <br />Admin</div>
                        <div id="logDropdown" class="drpdown-content">
                            <button id="lnkLogout" style="background:transparent;border:none;padding:8px;">Logout</button>
                        </div>
                    </div>
                </li>

            </ul>
        </nav>
        <div class="frmAddNew row col-md-12">
            <h2>Add New User</h2>
            <h5>All the below fields are mandatory.</h5>
            @if (ViewBag.Message != null)
            {
                <div id="popupdiv" style="color: red;font-weight:bold;">
                    @ViewBag.Message
                </div>
            }
            <table id="tblLogin">
                <tr>
                    <td>
                        First Name
                    </td>
                    <td>
                        @*<input type="text" id="uname" name="uname" />*@
                        @Html.TextBoxFor(m => m.FirstName, new { autocomplete = "on", @class = "nospcl" })
                        @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "redtext" })

                    </td>
                </tr>
                <tr>
                    <td>
                        Last Name
                    </td>
                    <td>
                        @Html.TextBoxFor(m => m.LastName, new { autocomplete = "on", @class = "nospcl" })
                        @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "redtext" })
                    </td>
                </tr>
                <tr>
                    <td>
                        User Id
                    </td>
                    <td>
                        @Html.TextBoxFor(m => m.UserId, new { autocomplete = "on", @id = "txtUserId", @class = "nospcl" })
                        @Html.ValidationMessageFor(m => m.UserId, "", new { @class = "redtext" })
                    </td>
                </tr>
                <tr>
                    <td>
                        Password
                    </td>
                    <td>
                        @Html.TextBoxFor(m => m.Password, new { autocomplete = "on", @class = "nospcl" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "redtext" })
                    </td>
                </tr>
                <tr>
                    <td>
                        Company
                    </td>
                    <td>
                        @Html.TextBoxFor(m => m.Company, new { autocomplete = "on", @class = "nospcl" })
                        @Html.ValidationMessageFor(m => m.Company, "", new { @class = "redtext" })
                    </td>
                </tr>
                <tr>
                    <td>
                        Role
                    </td>
                    <td>
                        @Html.TextBoxFor(m => m.Role, new { autocomplete = "on", @class = "nospcl" })
                        @Html.ValidationMessageFor(m => m.Role, "", new { @class = "redtext" })
                    </td>
                </tr>
                <tr>
                    <td>
                        Start Date
                    </td>
                    <td>
                        @Html.TextBoxFor(m => m.StartDate, new { autocomplete = "on", @class = "nospcl" })
                        @Html.ValidationMessageFor(m => m.StartDate, "", new { @class = "redtext" })
                    </td>
                </tr>
                <tr>
                    <td>
                        End Date
                    </td>
                    <td>
                        @Html.TextBoxFor(m => m.EndDate, new { autocomplete = "on", @class = "nospcl" })
                        @Html.ValidationMessageFor(m => m.EndDate, "", new { @class = "redtext" })
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <input id="submit" type="submit" value="Add User" />
                    </td>
                </tr>
            </table>
        </div>
    }
    <footer class="footeralign navbar-fixed-bottom">
        <div>&copy; 2018, ITC Infotech India Ltd. All rights reserved.</div>

    </footer>
</div>
